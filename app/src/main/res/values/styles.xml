<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/monopolyRed</item>
        <item name="colorPrimaryDark">@color/monopolyGreen</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Monopoly_Text_Views" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Monopoly_Buttons">

        <item name="android:textColor">@color/monopolyGreen</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>