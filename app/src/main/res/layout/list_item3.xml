<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:background="@drawable/border"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="150sp">

    <TextView
        android:id="@+id/text_view_list_item3"
        android:layout_width="wrap_content"
        android:layout_height="33sp"

        android:gravity="center"
        android:text="Player :"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/balance_text2_list_item3"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <TextView
        android:id="@+id/text_view2_list_item3"
        android:layout_width="wrap_content"
        android:layout_height="33sp"
        android:gravity="center"
        android:text="0"
        android:theme="@style/Monopoly_Text_Views"
        app:layout_constraintBottom_toTopOf="@+id/position_text_list_item3"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toEndOf="@+id/text_view_list_item3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.396" />

    <TextView
        android:id="@+id/balance_text_list_item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:padding="5dp"
        android:text="Balance:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/balance_text2_list_item3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_list_item3"
        app:layout_constraintVertical_bias="0.603" />

    <TextView
        android:id="@+id/balance_text2_list_item3"
        android:layout_width="61dp"
        android:layout_height="53dp"
        android:layout_marginLeft="6sp"
        android:layout_marginStart="6sp"
        android:theme="@style/Monopoly_Text_Views"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/position_text_list_item3"
        app:layout_constraintStart_toEndOf="@+id/balance_text_list_item3"
        app:layout_constraintTop_toBottomOf="@+id/text_view_list_item3" />

    <TextView
        android:id="@+id/position_text_list_item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        android:text="Position:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/balance_text2_list_item3"
        app:layout_constraintStart_toEndOf="@id/balance_text2_list_item3"
        app:layout_constraintTop_toBottomOf="@+id/text_view_list_item3"
        app:layout_constraintVertical_bias="0.533" />

    <TextView
        android:id="@+id/position_text2_list_item3"
        android:layout_width="61dp"
        android:layout_height="53dp"
        android:layout_marginStart="6sp"
        android:layout_marginLeft="6sp"
        android:theme="@style/Monopoly_Text_Views"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintLeft_toRightOf="@id/text_view_list_item3"
        app:layout_constraintStart_toEndOf="@+id/position_text_list_item3"
        app:layout_constraintTop_toBottomOf="@+id/text_view_list_item3"
        app:layout_constraintVertical_bias="0.511"
        />




</androidx.constraintlayout.widget.ConstraintLayout>