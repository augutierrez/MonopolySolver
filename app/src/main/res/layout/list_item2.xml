<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:background="@drawable/border"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="150sp">


    <TextView
        android:id="@+id/owner_text2_list_item2"
        android:layout_width="61dp"
        android:layout_height="53dp"
        android:layout_marginLeft="6sp"
        android:layout_marginStart="6sp"
        android:theme="@style/Monopoly_Text_Views"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/owner_text_list_item2"
        app:layout_constraintStart_toEndOf="@+id/h_value_text_list_item2"
        app:layout_constraintTop_toBottomOf="@+id/text_view_list_item2" />

    <TextView
        android:id="@+id/h_value_text2_list_item2"
        android:layout_width="61dp"
        android:layout_height="53dp"
        android:layout_marginStart="6sp"
        android:layout_marginLeft="6sp"
        android:theme="@style/Monopoly_Text_Views"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintLeft_toRightOf="@id/text_view_list_item2"
        app:layout_constraintStart_toEndOf="@+id/owner_text_list_item2"
        app:layout_constraintTop_toBottomOf="@+id/text_view_list_item2"
        app:layout_constraintVertical_bias="0.511"
        />



    <TextView
        android:id="@+id/text_view_list_item2"
        android:layout_width="243dp"
        android:layout_height="33dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="10sp"

        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="North Carolina Avenue"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/owner_text2_list_item2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <TextView
        android:id="@+id/owner_text_list_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        android:text="H value:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/owner_text2_list_item2"
        app:layout_constraintStart_toEndOf="@id/owner_text2_list_item2"
        app:layout_constraintTop_toBottomOf="@+id/text_view_list_item2"
        app:layout_constraintVertical_bias="0.533" />

    <TextView
        android:id="@+id/h_value_text_list_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:padding="5dp"
        android:text="Owner:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/owner_text2_list_item2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_list_item2"
        app:layout_constraintVertical_bias="0.603" />


</androidx.constraintlayout.widget.ConstraintLayout>